<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="financeProgressStyle">@style/FinanceProgressDefaultStyle</item>
    </style>


    <style name="FinanceProgressDefaultStyle">
        <item name="color">@color/colorAccent</item>
        <item name="backCircleColor">@color/colorBackCircle</item>
        <item name="textSize">@dimen/default_text_size</item>
        <item name="strokeWidth">@dimen/default_stroke_width</item>
    </style>

</resources>
